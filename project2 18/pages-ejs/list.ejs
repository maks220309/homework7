<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="wrapper"><ul>
        <% if (data.length>0) { %>
            <% data.forEach(({name, age, country})=> {%>
                <li>
                    <article>
                        <div class="info">
                            <span class="name"><span class="under">имя:</span>
                                <% name = name.split('').slice(1,-1).join('')%>
                                <%= name %>
                                
                            </span>
                            <span class="age"><span class="under">возраст:</span>
                                <% age = age.split('').slice(1,-1).join('')%>
                                <%= age %>
                            </span>
                            <span class="country"><span class="under">страна:</span>
                                <% country = country.split('').slice(1,-1).join('')%>
                                <%= country %>        
                            </span>
                        </div>
                    </article>
                </li>
                <% }) %>
                    <% } %>
    </ul></div>
</body>
</html>